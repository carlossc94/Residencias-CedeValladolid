block content
    .ui.container.segment.justified
        h2.ui.header.dividing Crear Nuevo Pendiente

        div(class='form-nuevopendiente')
            form(class=['ui','form'] action='' method='post')
                .field
                    label Titulo Del Pendiente
                    input(type='text', name='titulo', placeholder='Escriba el TÃ­tulo')
                .field
                    label Cuerpo del Pendiente
                    textarea(style='margin-top: 0px; margin-bottom: 0px; height: 200px;', name='cuerpo')
                button.ui.button(type='submit') Subir Pendiente
                div(class=['ui','message','error'])
