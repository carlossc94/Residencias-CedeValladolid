extends ../templates/default

block content
    .ui.container.segment.justified
        h2.ui.header.dividing Crear Nueva Noticia

        div(class='form-nuevanoticia')
            form(class=['ui','form'] action='' method='post')
                .field
                    label Titulo De La Noticia
                    input(type='text', name='titulo', placeholder='Escriba el TÃ­tulo')
                .field
                    label Cuerpo de la noticia
                    textarea(style='margin-top: 0px; margin-bottom: 0px; height: 200px;', name='cuerpo')
                .field
                    .ui.teal.labeled.icon.button.fileUpload
                        i.add.icon
                        span Agregar Imagen
                        input.upload#uploadbtn(type='file' accept="image/*")
                    .ui.input.entrada
                        input#uploadFile(type='text' placeholder='Choose File' disabled="disbled")
                button.ui.button.primary.huge(type='submit') Subir Noticia
                div(class=['ui','message','error'])
        if info != undefined
            div(class=['ui','message', 'success'])
                i(class=['close','icon'])
                div(class='header') Ingreso Correcto
                    p=info